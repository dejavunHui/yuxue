<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.wealth.fragment.TimeFagment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       >

       <com.xenione.digit.TabDigit
           xmlns:digit="http://schemas.android.com/apk/res-auto"
           android:id="@+id/hour2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           digit:backgroundColor="@null"
           digit:textColor="@color/white"
           digit:textSize="25dp"
           digit:padding="5dp"
           />
       <com.xenione.digit.TabDigit
           xmlns:digit="http://schemas.android.com/apk/res-auto"
           android:id="@+id/hour1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           digit:backgroundColor="@null"
           digit:textColor="@color/white"
           digit:textSize="25dp"
           digit:padding="5dp"
           />

       <com.xenione.digit.TabDigit
           xmlns:digit="http://schemas.android.com/apk/res-auto"
           android:id="@+id/span1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           digit:backgroundColor="@null"
           digit:textColor="@color/white"
           digit:textSize="25dp"
           digit:padding="5dp"
           />


       <com.xenione.digit.TabDigit
           xmlns:digit="http://schemas.android.com/apk/res-auto"
           android:id="@+id/minu2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           digit:backgroundColor="@null"
           digit:textColor="@color/white"
           digit:textSize="25dp"
           digit:padding="5dp"
           />
       <com.xenione.digit.TabDigit
           xmlns:digit="http://schemas.android.com/apk/res-auto"
           android:id="@+id/minu1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           digit:backgroundColor="@null"
           digit:textColor="@color/white"
           digit:textSize="25dp"
           digit:padding="5dp"
           />

   </LinearLayout>

</FrameLayout>